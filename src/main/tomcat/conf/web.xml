<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
    version="5.0"
>
    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>

    <filter>
       <filter-name>ExpiresFilter</filter-name>
       <filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
       <init-param>
          <param-name>ExpiresDefault</param-name>
          <param-value>access plus 5 minutes</param-value>
       </init-param>
    </filter>
    <filter-mapping>
       <filter-name>ExpiresFilter</filter-name>
       <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>FailedRequestFilter</filter-name>
        <filter-class>org.apache.catalina.filters.FailedRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FailedRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

<!--    <filter>-->
<!--        <filter-name>PlayFilter</filter-name>-->
<!--        <filter-class>nu.mine.mosher.servlet.PlayFilter</filter-class>-->
<!--    </filter>-->
<!--    <filter-mapping>-->
<!--        <filter-name>PlayFilter</filter-name>-->
<!--        <url-pattern>/*</url-pattern>-->
<!--    </filter-mapping>-->

    <filter>
        <filter-name>SerializeDomFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.SerializeDomFilter</filter-class>
        <init-param>
            <param-name>attrIn</param-name>
            <param-value>dom</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SerializeDomFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SetProxyPath</filter-name>
        <filter-class>nu.mine.mosher.servlet.XsltFilter</filter-class>
        <init-param>
            <param-name>attrIn</param-name>
            <param-value>page</param-value>
        </init-param>
        <init-param>
            <param-name>xsltPath</param-name>
            <param-value>/WEB-INF/xslt/proxypath.xslt</param-value>
        </init-param>
        <init-param>
            <param-name>attrOut</param-name>
            <param-value>dom</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SetProxyPath</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ProxyPathFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.ProxyPathFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProxyPathFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SlashRedirectFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.SlashRedirectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SlashRedirectFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>FormatDirectory</filter-name>
        <filter-class>nu.mine.mosher.servlet.XsltFilter</filter-class>
        <init-param>
            <param-name>attrIn</param-name>
            <param-value>dir</param-value>
        </init-param>
        <init-param>
            <param-name>xsltPath</param-name>
            <param-value>/WEB-INF/xslt/directory.xslt</param-value>
        </init-param>
        <init-param>
            <param-name>attrOut</param-name>
            <param-value>page</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FormatDirectory</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>DirectoryFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.DirectoryFilter</filter-class>
        <init-param>
            <param-name>attrOut</param-name>
            <param-value>dir</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>DirectoryFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ContentTypeFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.ContentTypeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ContentTypeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>HtmlToXhtmlFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.HtmlToXhtmlFilter</filter-class>
        <init-param>
            <param-name>attrOut</param-name>
            <param-value>page</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>HtmlToXhtmlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>XmlToDomFilter</filter-name>
        <filter-class>nu.mine.mosher.servlet.XmlToDomFilter</filter-class>
        <init-param>
            <param-name>attrOut</param-name>
            <param-value>page</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>XmlToDomFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
